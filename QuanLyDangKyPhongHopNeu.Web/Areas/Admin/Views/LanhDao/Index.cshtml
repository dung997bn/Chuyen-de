
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section scripts{
    <script src="~/Assets/Admin/assets/js/controller/lanhdao.js"></script>
}
@section css{
    <style>
        .div123 {
            padding-top: 30px;
            padding-bottom: 5px;
        }
    </style>

}
<div class="row" style="padding-top:5px;">
    <div class="col-md-12">
        <div class="card" style="padding-top:10px;">
            <div class="col-md-12">
                <div class="header col-md-6">
                    <h2 style="text-align:center;" class="title">Danh sách nhân sự</h2>
                </div>
                <div class="col-md-2  div123">
                    <button id="btnAdd" class="btn btn-success">Thêm mới</button>
                </div>
            </div>

            <div class="content table-responsive table-full-width" style="padding-top:80px;">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Chức vụ</th>
                            <th>Đơn vị công tác</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tblData"></tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<ul id="pagination" class="pagination pull-right"></ul>
<script id="dataTemplate" type="x-tmpl-mustache">
    <tr>
        <td>{{ID}}</td>
        <td>{{HoTen}}</td>
        <td>{{ChucVu}}</td>
        <td>{{DonViCongTac}}</td>
        <td>{{Email}}</td>
        <td>
            <button data-id="{{ID}}" class="btn btn-primary btn-sm btnEdit"><i class="fa fa-pencil"></i></button>
            <button data-id="{{ID}}" class="btn btn-danger btn-sm btnDelete"><i class="fa fa-trash"></i></button>
        </td>
    </tr>
</script>

<div class="modal fade" id="modalAddEdit" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Lãnh đạo</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <input id="hidID" type="hidden" value="0" />
                        <label for="txtHoTen">Họ tên:</label>
                        <input type="text" class="form-control" id="txtHoTen">
                    </div>
                    <div class="form-group">

                        <label for="txtChucVu">Chức vụ:</label>
                        <input type="text" class="form-control" id="txtChucVu">
                    </div>
                    <div class="form-group">

                        <label for="txtEmail">Đơn vị công tác:</label>
                        <input type="text" class="form-control" id="txtDVCT">
                    </div>
                    <div class="form-group">

                        <label for="txtEmail">Email:</label>
                        <input type="text" class="form-control" id="txtEmail">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

