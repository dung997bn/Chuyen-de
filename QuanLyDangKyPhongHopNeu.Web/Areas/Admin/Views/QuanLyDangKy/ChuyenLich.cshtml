@model QuanLyDangKyPhongHopNeu.Web.Areas.Admin.Models.ChuyenPhong
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section scripts{
    <script src="~/Assets/Home/js/dangKy.js"></script>
    <script src="~/Assets/Admin/assets/js/controller/chuyenphong.js"></script>
}


@using (Html.BeginForm("ChuyenLich", "QuanLyDangKy", FormMethod.Post))
{
    <div style="text-align:center;">
        <h2>Thay đổi thông tin</h2>
    </div>
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.PhongCu)
        <div class="row">
            <div class="col-md-12">          
                <div class="form-group">
                    @Html.LabelFor(model => model.NoiDungCuocHop, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.TextAreaFor(model => model.NoiDungCuocHop, 4, 105, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoiDungCuocHop, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model => model.IdPhongMoi)
                <div class="form-group">
                    @Html.Label("Phòng", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.TenPhong, Model.ListPhong as IEnumerable<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ThoiGianBatDau, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.DropDownList("ThoiGianBatDau", Model.ListThoiGianBatDau as IEnumerable<SelectListItem>, new { @class = "form-control", id = "ddlBatDau" })
                        @Html.ValidationMessageFor(model => model.ThoiGianBatDau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ThoiGianKetThuc, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.DropDownList("ThoiGianKetThuc", Model.ListThoiGianKetThuc as IEnumerable<SelectListItem>, new { @class = "form-control", id = "ddlKetThuc" })
                        @Html.ValidationMessageFor(model => model.ThoiGianKetThuc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="display:none;">
                    @Html.LabelFor(model => model.NgayDangKy, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.NgayDangKy, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.NgayDangKy, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*@Html.HiddenFor(x => x.IdLanhDao)
                <div class="form-group">
                    @Html.Label("Lãnh đạo", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.LanhDao, Model.ListLanhDao as IEnumerable<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>*@
                @Html.HiddenFor(x => x.NgayDangKy)
                <div class="form-group">
                    @Html.Label("Ngày đăng ký", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="input-group col-md-6" style="padding-left:19px!important;">
                        <input type="text" style="width:80%;" class="form-control" id="txtNgay" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenNguoiDangKy, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.TenNguoiDangKy, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenNguoiDangKy, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TenNguoiChuTriCuocHop, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.TenNguoiChuTriCuocHop, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.TenNguoiChuTriCuocHop, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3 form-inline">
                        <button type="button" class="btn btn-success btn-sm" id="btnChuTri">Chọn người chủ trì</button>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ChucVu, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ChucVu, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EmailNguoiChuTri, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.EmailNguoiChuTri, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.EmailNguoiChuTri, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.DonViCongTac, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.DonViCongTac, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.DonViCongTac, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ThanhPhan, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.TextAreaFor(model => model.ThanhPhan, 4, 105, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ThanhPhan, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3 form-inline">
                        <button type="button" class="btn btn-info btn-sm" id="btnThemThanhPhan">Thêm thành phần</button>
                        <button type="button" class="btn btn-danger btn-sm" id="btnClear">Xóa thành phần</button>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TieuDe, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(x => x.IdLanhDao)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-11" style="color:red !important;">
                        <label>(*Thành phần tham dự được nhập theo định dạng Họ_và_tên (địa_chỉ_email), ví dụ: Phạm Minh Hoàn (hoanpm@neu.edu.vn) và được phân cách bởi dấu phẩy (,).)</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">

                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-sm btn-success">Xác nhận</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<!-- Modal -->
<div class="modal fade" id="ModelLanhDao" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chọn thành phần</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="col-md-pull-6">
                        <div class="col-md-4">
                            <select id="ddlLanhDao" class="form-control">
                                <option value="0">--Chọn thành phần--</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="btnChonLanhDao" class="btn btn-sm btn-success form-control">Chọn</button>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="ModelChuTri" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chọn người chủ trì</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="col-md-pull-6">
                        <div class="col-md-4">
                            <select id="ddlChuTri" class="form-control">
                                <option value="0">--Người chủ trì--</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="btnChonNguoiChuTri" class="btn btn-sm btn-success form-control">Chọn người chủ trì</button>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

